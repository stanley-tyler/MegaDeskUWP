<Page
    x:Class="MegaDeskUWP.AddQuote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MegaDeskUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="getQuote" Content="Get Quote" HorizontalAlignment="Left" Margin="579,443,0,0" VerticalAlignment="Top" Width="175"                        TabIndex="7"/>
        <TextBox x:ConnectionId='2' x:Name="numOfDrawersTextBox" HorizontalAlignment="Left" Margin="579,241,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175" TabIndex="4"/>
        <TextBox x:ConnectionId='3' x:Name="heightTextBox" HorizontalAlignment="Left" Margin="579,181,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="27" Width="175" TabIndex="3"/>
        <TextBox x:ConnectionId='4' x:Name="widthTextBox" HorizontalAlignment="Left" Margin="579,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175" TabIndex="2"/>
        <TextBox x:ConnectionId='5' x:Name="nameTextBox" HorizontalAlignment="Left" Margin="579,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175" TabIndex="1"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock" HorizontalAlignment="Left" Margin="460,71,0,0" TextWrapping="Wrap" Text="Enter your Name" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlock1" HorizontalAlignment="Left" Height="1" Margin="551,138,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="0"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock2" HorizontalAlignment="Left" Margin="489,135,0,0" TextWrapping="Wrap" Text="Enter Width" VerticalAlignment="Top" Height="20"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="489,197,0,0" TextWrapping="Wrap" Text="Enter Height" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='10' x:Name="textBlock2_Copy1" HorizontalAlignment="Left" Margin="399,253,0,0" TextWrapping="Wrap" Text="Enter Number of Drawers" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='11' x:Name="textBlock2_Copy2" HorizontalAlignment="Left" Margin="438,313,0,0" TextWrapping="Wrap" Text="Select Desk Material" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='12' x:Name="textBlock2_Copy3" HorizontalAlignment="Left" Margin="447,374,0,0" TextWrapping="Wrap" Text="Rush Order Option" VerticalAlignment="Top"/>
        <ComboBox x:ConnectionId='13' x:Name="deskMaterialComboBox" HorizontalAlignment="Left" Margin="579,301,0,0" VerticalAlignment="Top" Width="175" TabIndex="5">
            <ComboBoxItem Content="Oak"/>
            <ComboBoxItem Content="Laminate"/>
            <ComboBoxItem Content="Pine"/>
            <ComboBoxItem Content="Rosewood"/>
            <ComboBoxItem Content="Veneer"/>
        </ComboBox>
        <ComboBox x:ConnectionId='14' x:Name="rushOptionsComboBox" HorizontalAlignment="Left" Margin="579,362,0,0" VerticalAlignment="Top" Width="175" TabIndex="6">
            <ComboBoxItem Content="3 day"/>
            <ComboBoxItem Content="5 day"/>
            <ComboBoxItem Content="7 day"/>
        </ComboBox>
    </Grid>
</Page>

