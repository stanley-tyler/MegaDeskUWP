<Page
    x:Class="MegaDeskUWP.SearchQuote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MegaDeskUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="resultTextBox" HorizontalAlignment="Center" Height="500" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="1004" Margin="10,125,10,15"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="616,93,0,0" VerticalAlignment="Top" Click="searchButton_Click"/>
        <ComboBox x:Name="materialComboBox" HorizontalAlignment="Left" Margin="453,93,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Oak"/>
            <ComboBoxItem Content="Laminate"/>
            <ComboBoxItem Content="Pine"/>
            <ComboBoxItem Content="Rosewood"/>
            <ComboBoxItem Content="Veneer"/>
        </ComboBox>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="350,98,0,0" TextWrapping="Wrap" Text="Select Material" VerticalAlignment="Top"/>

    </Grid>
</Page>
